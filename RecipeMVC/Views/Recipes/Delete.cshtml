@model RecipeModel.Models.Recipe
@using Microsoft.AspNetCore.Identity
@using RecipeModel.Models

@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <br />
    <div class="row" style="align-items:center">
        <div class="col">
            <h3>Are you sure you want to delete this?</h3>
        </div>
        <div class="col">
            <img src="~/Images/delete.png" style="float:right">
        </div>
    </div>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                Instructions
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Instructions)
            </dd>
            <dt class="col-sm-2">
                Preparation time
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PreparationTime)'
            </dd>
            <dt class="col-sm-2">
                Baking time
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BakingTime)'
            </dd>
            <dt class="col-sm-2">
                Serving size
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ServingSize)
            </dd>
            <dt class="col-sm-2">
                Cuisine
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cuisine)
            </dd>
            <dt class="col-sm-2">
                Category
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt class="col-sm-2">
                Creation date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <button class="btn btn-outline-info" asp-controller="Recipes" asp-action="GetUserRecipes" asp-route-userId="@UserManager.GetUserId(User)">Back to List</button>
        </form>
    </div>
</body>
</html>