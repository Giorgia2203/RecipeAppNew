@model IEnumerable<RecipeModel.ViewModel.IngredientBrand>
@using Microsoft.AspNetCore.Identity
@using RecipeModel.Models
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "IngredientsInRecipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript">
        function redirectToAddIngredients(recipeId) {
            window.location.href = `https://localhost:44310/Recipes/GetRecipeIngredients?recipeId=${recipeId}`;
        }
    </script>
    <style>
        ul {
            list-style: url(/Images/fork.png);
            list-style-position: outside;
        }
    </style>
</head>
<body>
    <br />
    <div class="row" style="align-items:center">
        <div class="col">
            <h3>Change or delete your ingredients</h3>
        </div>
        <div class="col">
            <img src="~/Images/ingredients.png" style="float:right">
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12 mx-auto">
            <ul>
                @foreach (var item in Model)
                {
                    <li>
                        <div class="row">
                            <div class="col-md-6">
                                @Html.DisplayFor(model => item.RecipeIngredient.Amount)
                                @Html.DisplayFor(model => item.RecipeIngredient.Measurement)
                                @Html.DisplayFor(model => item.Ingredient.Name)
                                @Html.DisplayFor(model => item.Brand.Name)
                            </div>
                            <div class="coll-md-6">
                                <a asp-controller="RecipeIngredients" asp-action="IngredientBrandEdit" asp-route-recipeId="@item.RecipeIngredient.RecipeId" asp-route-ingredientId="@item.Ingredient.Id" asp-route-brandId="@item.Brand.Id">Edit </a> |
                                <a asp-controller="RecipeIngredients" asp-action="Delete" asp-route-recipeId="@item.RecipeIngredient.RecipeId" asp-route-ingredientId="@item.Ingredient.Id" asp-route-brandId="@item.Brand.Id"> Delete</a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
    <br />
    <br />
    <a asp-controller="Recipes" asp-action="GetUserRecipes" asp-route-userId="@UserManager.GetUserId(User)" class="btn btn-outline-secondary">Back</a>
    <button onclick="redirectToAddIngredients(@Model.ElementAt(0).RecipeIngredient.RecipeId)" class="btn btn-outline-success">Add another ingredient</button>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

